BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: ''
            font_size: 48
            multiline: False
            size_hint_x: 0.85  #change size for more spaces
            on_text: app.handle_convert(self.text)
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(input_miles.text, 1) #increase value 1
            Button:
                text: 'Down'
                 on_press: app.handle_increment(input_miles.text, -1) # decrease value -1
#    Button:
#        text: 'Convert m to km'
#        on_press: app.handle_calculate()
    Label:
        id: output_label
        font_size: 48
        text: '54.717'
        color: (1, 1, 0, 1)