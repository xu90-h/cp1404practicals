BoxLayout:
    orientation: "vertical"
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '4.1'
            font_size: 48
            multiline: False
        Button:
            text: 'Square'
            # the following line specifies the function in the app class to call when the button is pressed
            on_press: app.handle_calculate(input_number.text)
        Label:
            id: output_label
            text: '16.81'
            font_size: 48
            color: (1, 0.75, 0.8, 1)
    BoxLayout:
        orientation: "horizontal"
        Label:
            text: 'Enter a number and press "Square"'